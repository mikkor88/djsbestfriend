<p><%= link_to "Add new record", new_record_path %></p>
<% unless @record_index_items.empty? %>
  <table index="records_index">
    <tr>
			<th>Artist</th>
			<th>Title</th>
			<th>Year</th>
			<th>Type</th>
			<% if current_user.admin? %>
				<th>Delete?</th>
			<% end %>
		</tr>
		<%= render :partial => 'shared/record_index_item', :collection => @record_index_items %>
  </table>
  <%= will_paginate @record_index_items %>
<% end %>