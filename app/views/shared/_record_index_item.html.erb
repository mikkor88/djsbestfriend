<tr>
		<td class="artist">
		  <%= record_index_item.artist %>
		</td>
		<td class="title">
			 <%= link_to record_index_item.title, record_index_item %>
		</td>
		<td class="year">
			<%= record_index_item.year.strftime("%Y") unless record_index_item.year.nil? %>
		</td>
		<td class="type">
			<%= record_index_item.record_type %>
		</td>
		<td><% if current_user.admin? %>
		<%= link_to "delete", record_index_item, :method => :delete, 
													:confirm => "You sure?",
													:title => "Delete #{record_index_item.title}" %>
		<% end %>
		</td>
</tr>